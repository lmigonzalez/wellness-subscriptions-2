# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (Resend)
RESEND_API_KEY=your_resend_api_key_here

# Cron Job Security
CRON_SECRET=your_cron_secret_here

# User Emails (comma-separated)
USER_EMAILS=user1@example.com,user2@example.com

# Database Configuration (PostgreSQL with Prisma)
# 
# For Vercel: Vercel Postgres automatically provides POSTGRES_URL
# The code will automatically use POSTGRES_URL if DATABASE_URL is not set
# 
# For local development with Vercel database:
# Run: vercel env pull .env.local
# This will pull POSTGRES_URL from Vercel
# 
# For local development with local PostgreSQL:
# DATABASE_URL="postgresql://user:password@localhost:5432/wellness_db?schema=public"
# 
# Vercel Postgres provides these automatically:
# - POSTGRES_URL (main connection string - used automatically)
# - POSTGRES_PRISMA_URL (Prisma-optimized)
# - POSTGRES_URL_NON_POOLING (for migrations)
DATABASE_URL="postgresql://user:password@localhost:5432/wellness_db?schema=public"
